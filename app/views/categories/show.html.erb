<div class="container">
  <section id="category" class="section-2 no-border row">
    <h1 class="mb-xs-20 text-center"><%= @category.name %></h1>
    <div class="tab-content col-xs-10 col-xs-push-1 col-sm-9 col-sm-push-3">
      <div class="tab-pane fade active in border border-xs-0 py-xs-20 py-sm-40 overflow-auto">
        <% @category.products.each do |product| %>
        <div class="col-sm-3 border mb-xs-20 mx-sm-15 pt-xs-15 text-center">
          <%= link_to product_path(product.permalink) do %>
            <%= product_image I18n.locale, product %>
            <h5><%= product.name %></h5>
            <p><%= product.model %></p>
            <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <!-- /tab-content -->
    <div class="shop-sidebar col-sm-3 col-sm-pull-9">
      <div class="sidebar-inner">
        <ul class="sidebar-menu" role="tablist">
          <li class="tittle">
            <span><b><%= t('frontend.nav.categories') %></b></span>
          </li>
          <!-- /tittle -->
          <% @categories.each do |cat| %>
          <li><%= link_to cat.name, category_path(cat.permalink) %></li>
          <% end %>
        </ul>
        <!-- /sidebar-menu -->
      </div>
      <!-- /sidebar-inner -->
    </div>
    <!-- /side-nav -->
  </section>
  <!-- /Category-wrapper -->
</div>
<!-- Container -->