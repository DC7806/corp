<%= content_for(:body_attributes) do %>data-turbolinks="false"<% end %>
<!-- Contact -->
<section id="contact" class="section-4">
  <div class="container">
    <div class="row">
      <div class="contact-form">
        <div class="col-md-10 col-md-offset-1 mt-sm-30">
            <h2 class="text-center"><%= t('frontend.contact.hq') %></h2>
            <div class="row">
              <div id="google-map" class="map col-xs-12 mt-sm-20"></div>
              <div class="col-xs-12 mt-xs-20">
                <%#= hq_contact_info @contacts_hq_en, @contacts_hq_zh %>
                <%= contact_info_hq I18n.locale %>
              </div>
            </div>
            <div class="row mt-sm-20">
              <%= contact_info_regions I18n.locale %>
            </div>
        </div>
        <!-- /contact-item-wrapper -->
      </div>
      <!-- /contact-form-1 -->
    </div>
    <!-- /row -->
    <div class="row">
      <%= render "inquiries/form", inquiry: @inquiry %>
    </div>
      <!-- /row -->
  </div>
  <!-- /container -->
</section>
<!-- /Contact -->
