<div class="container section-2">
  <!-- Category side nav -->
  <div id="category-side-nav" class="col-sm-3 hidden-xs">
    <%= render 'layouts/category_side_nav' %>
  </div>
  <!-- /Category side nav -->
  <!-- Products wrapper -->
  <div id="products-wrapper" class="col-xs-12 col-sm-9 col-md-8 pull-right">
    <!-- Products Details -->
    <section id="products-list" class="no-border no-padding-btm row">
      <% @products.each do |product| %>
      <div class="col-sm-3 border mb-xs-20 mx-sm-15 pt-xs-15 text-center">
        <%= link_to product_path(product.permalink) do %>
        <%= product_image I18n.locale, product %>
        <h5><%= product.name %></h5>
        <p><%= product.model %></p>
        <% end %>
      </div>
      <% end %>
      <div class="text-center clear">
        <ul class="pagination">
          <%= paginate @products %>     
        </ul>
      </div>
    </section>
    <!-- /Products Details -->
  </div>
  <!-- /Products wrapper -->
</div>
<!-- /Container -->