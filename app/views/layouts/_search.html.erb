<%= form_tag search_path, method: :get, id: 'search' do %>
  <div class="input">
    <div class="container">
      <%= text_field_tag :query, params[:query], placeholder: 'Search...', class: 'search' %>
      <%= button_tag '', name: nil, class: 'submit ti-search' %>
    </div>
  </div>
  <button class="ti-close" id="close" type="reset"></button>
</form>
<% end %>