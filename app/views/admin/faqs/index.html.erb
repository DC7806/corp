<%= link_to "新增", new_admin_faq_path, class: "btn btn-default btn-add-new my-xs-20"%>
<ul class="nav nav-pills my-xs-20" role="tablist">
  <li class="active"><a role="tab" href="#faq_zh-TW" data-toggle="tab">中文</a></li>
  <li ><a role="tab" href="#faq_en" data-toggle="tab">英文</a></li>
</ul>
<div class="tab-content mt-xs-20">
  <% {'zh-TW': 'active', 'en': 'fade'}.each do |locale, status| %>
  <!-- faq_<%= locale %> anel -->
  <div role="tabpanel" class="tab-pane <%= status %>" id=<%= "faq_#{locale}" %>>
    <table class="table xs-transform">
      <thead class="hidden-xs">
        <tr>
          <td class="col-sm-5">建立日期</td>
          <td class="col-sm-5">問題</td>
        </tr>
      </thead>
      <tbody>
        <% @admin_faqs.lang_query(locale).each do |faq|%>
        <tr>
          <td class="col-sm-5"><%= faq.created_at.to_date %></td>
          <td class="col-sm-5"><%= faq.question %></td>
          <td class="col-sm-2 text-center">
            <%= link_to edit_admin_faq_path(faq), class: "btn btn-primary" do %>
              <i class="fa fa-pencil fa-fw"></i>
            <% end %> 
            <%= link_to admin_faq_path(faq), method: "delete", data: { confirm: "Sure?" }, class: "btn btn-danger" do%>
              <i class="fa fa-trash fa-fw"></i>
            <% end %>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  <% end %>
</div>