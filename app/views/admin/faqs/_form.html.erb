<%= form_for admin_faq do |f| %>

<div class="form-group mt-xs-20">
  <%= f.label :lang, '語言' %>
  <%= f.select :lang, options_for_select([['中文'],['英文']]), {include_blank: " - SELECT - "}, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :question, '問題' %>
  <%= f.text_field :question, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :answer, '答案' %>
  <%= f.text_area :answer, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.submit "確定", class: "btn btn-success form-control" %>
</div>

<% end %>