<h1>Products List</h1>

<h2><%= link_to "Add Product", new_admin_product_path, class: "btn btn-default" %></h2>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Permalink</td>
    </tr>
  </thead>
  <tbody>
    <% @admin_products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.model %></td>
      <% product.categories.each do |cat| %>
      <td><%= cat.name %></td>
      <% end %>
      <td>
        <%= link_to "Edit", edit_admin_product_path(product) %>
        <%= link_to "Delete", admin_product_path(product), method: "delete", data: { confirm: "Sure?" } %>  
      </td>
    </tr>
    <% end %>
  </tbody>
</table>