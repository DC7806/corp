<%= link_to "新增", new_admin_category_path, class: "btn btn-default btn-add-new" %>
<table class="table xs-transform mt-xs-20">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-5">分類名稱</td>
      <td class="col-sm-5">分類網址</td>
    </tr>
  </thead>
  <tbody>
    <% @admin_categories.each do |cat|%>
    <tr>
      <td class="col-sm-5"><%= cat.name %></td>
      <td class="col-sm-5"><%= cat.permalink %></td>
      <td class="col-sm-2 text-center">
        <%= link_to edit_admin_category_path(cat), class: "btn btn-primary" do %>
          <i class="fa fa-pencil fa-fw"></i>
        <% end %> 
        <%= link_to admin_category_path(cat), method: "delete", data: { confirm: "確認刪除?" }, class: "btn btn-danger" do%>
          <i class="fa fa-trash fa-fw"></i>
        <% end %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>