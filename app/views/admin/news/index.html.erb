<%= link_to "新增", new_admin_news_path, class: "btn btn-default btn-add-new" %>

<table class="table xs-transform mt-xs-20">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-5">建立日期</td>
      <td class="col-sm-5">文章標題</td>
    </tr>
  </thead>
  <tbody>
    <% @admin_news.each do |news|%>
    <tr>
      <td class="col-sm-5"><%= news.created_at.to_date %></td>
      <td class="col-sm-5"><%= news.title %></td>
      <td class="col-sm-2 text-center">
        <%= link_to edit_admin_news_path(news), class: "btn btn-primary" do %>
          <i class="fa fa-pencil fa-fw"></i>
        <% end %> 
        <%= link_to admin_news_path(news), method: "delete", data: { confirm: "確認刪除?" }, class: "btn btn-danger" do%>
          <i class="fa fa-trash fa-fw"></i>
        <% end %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>