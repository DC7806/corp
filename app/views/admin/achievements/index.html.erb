<%= link_to "新增分類", new_admin_achievement_path, class: "btn btn-default btn-add-new" %>
<table class="table xs-transform mt-xs-20">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-1"></td>
      <td class="col-sm-2">圖片</td>
      <td class="col-sm-3">標題</td>
      <td class="col-sm-2">敘述</td>
      <td class="col-sm-2">連結</td>
    </tr>
  </thead>
  <tbody class="sortable">
    <% @admin_achievements.each_with_sortable_id do |achievement, sortable_id|%>
    <tr id="<%= sortable_id %>">
      <td class="col-sm-1 text-center"><i class="fa fa-arrows fa-2x"></i></td>
      <td class="col-sm-2"><%= admin_index_image achievement %></td>
      <td class="col-sm-3"><%= achievement.title %></td>
      <td class="col-sm-2"><%= achievement.description %></td>
      <td class="col-sm-2"><%= achievement.permalink %></td>
      <td class="col-sm-2 text-center">
        <%= link_to edit_admin_achievement_path(achievement), class: "btn btn-primary" do %>
          <i class="fa fa-pencil fa-fw"></i>
        <% end %> 
        <%= link_to admin_achievement_path(achievement), method: "delete",
            data: { confirm: "確認刪除?" }, class: "btn btn-danger" do %>
          <i class="fa fa-trash fa-fw"></i>
        <% end %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>

<script type="text/javascript">
  $(function() {
  $('.sortable').railsSortable();
});
</script>