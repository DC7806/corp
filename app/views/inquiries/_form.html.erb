<%= form_for inquiry do |f| %>
  <div class="form-inside col-md-10 col-md-offset-1 mt-sm-30">
    <h2 class="text-center">聯絡我們</h2>
    <div class="form-group col-sm-12 mt-sm-15">
      <%= f.select :prefix, options_for_select([['先生'],['女士']]), {include_blank: " - 選擇稱謂 - "}, class: "form-control" %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :number %>
      <%= f.text_field :number, class: "form-control" %>      
    </div>
    <div class="form-group col-sm-6">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>      
    </div>
    <div class="form-group col-sm-12">
      <%= f.label :content %>
      <%= f.text_area :content, class: "text-area form-control" %>
    </div>
    <div class="form-group col-sm-6">
      <%= recaptcha_tags %>  
    </div>
    <div class="form-group col-sm-6">
      <%= f.submit '確認送出', class: "btn btn-md btn-style-2 width-100" %>  
    </div>
  </div>
  <!-- /form-inside -->
<% end %>
<!-- /contac-form-wrapper -->