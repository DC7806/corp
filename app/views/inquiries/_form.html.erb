<%= form_for inquiry do |f| %>
<%= f.label :prefix %>
<%= f.select :prefix, options_for_select([['先生'],['女士']]), {include_blank: " - 選擇稱謂 - "}, class: "form-control" %>
<%= f.label :first_name %>
<%= f.text_field :first_name, class: "form-control" %>
<%= f.label :last_name %>
<%= f.text_field :last_name, class: "form-control" %>
<%= f.label :number %>
<%= f.text_field :number, class: "form-control" %>
<%= f.label :email %>
<%= f.text_field :email, class: "form-control" %>
<%= f.label :content %>
<%= f.text_area :content, class: "text-area form-control" %>
<%= recaptcha_tags %>
<%= f.submit '確認送出', class: "btn btn-primary form-control" %>
<% end %>